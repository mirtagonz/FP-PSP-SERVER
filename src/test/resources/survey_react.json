{
    "title": "A stoplight survey example",
    "description": "A simple stoplight survey example.",
    "type": "object",
    "required": [
      "currency",
      "areaOfResidence",
      "employmentStatusPrimary",
      "activityMain",
      "employmentStatusSecondary",
      "activitySecondary",
      "householdMonthlyIncome",
      "salaryIncome",
      "benefitIncome",
      "pensionIncome",
      "savingsIncome",
      "otherIncome",
      "householdMonthlyOutgoing",
      "netSuplus",
      "educationClientLevel",
      "educationPersonMostStudied",
      "educationLevelAttained",
      "housingSituation",
      "income",
      "documentation",
      "drinkingWaterAccess"
    ],
    "properties": {
      "currency": {
        "type": "string",
        "title": "Moneda en la que gana su dinero",
        "default": "PYG/Paraguayan Guarani"
      },
      "areaOfResidence": {
        "type": "string",
        "title":  "Tipo de area de residencia, normalmente los valores son RURAL/URBAN",
        "default": "URBAN"
      },
      "employmentStatusPrimary": {
        "type": "string",
        "title": "Puesto en su empleo primario",
        "default": "sin puesto"
      },
      "activityMain": {
        "type": "string",
        "title": "Ingrese su actividad principal",
        "default": "Sin actividad"
      },
      "employmentStatusSecondary": {
        "type": "string",
        "title": "Puesto en su empleo secundario",
        "default": "Sin puesto"
      },
      "activitySecondary": {
        "type": "string",
        "title": "Ingrese su actividad secundaria",
        "default": "Sin actividad"
      },
      "householdMonthlyIncome": {
        "type": "integer",
        "title": "Ingrese su ingreso mensual familiar",
        "default": 0
      },
      "salaryIncome": {
        "type": "integer",
        "title": "Ingrese su ingreso mensual por salario",
        "default": 0
      },
      "benefitIncome": {
        "type": "integer",
        "title": "Ingrese su ingreso por algún tipo de beneficio del estado u organización",
        "default": 0
      },
      "pensionIncome": {
        "type": "integer",
        "title": "Ingrese su ingreso por pensión",
        "default": 0
      },
      "savingsIncome": {
        "type": "integer",
        "title": "Ingrese su la cantidad que tenga de ahorros",
        "default": 0
      },
      "otherIncome": {
        "type": "integer",
        "title": "Ingrese otros ingresos que tenga",
        "default": 0
      },
      "householdMonthlyOutgoing": {
        "type": "integer",
        "title": "Ingrese los gastos mensuales que tiene en su familia",
        "default": 0
      },
      "netSuplus": {
        "type": "integer",
        "title": "Ingrese net deficit",
        "default": 0
      },
      "educationClientLevel": {
        "type": "string",
        "title": "nivel de educación de la persona entrevistada o la cabeza de familia",
        "default": "ninguna"
      },
      "educationPersonMostStudied": {
        "type": "string",
        "title": "Nivel de educación de la persona con más estudios en la familia",
        "default": "ninguna"
      },
      "educationLevelAttained": {
        "type": "string",
        "title": "Nivel de educación alcanzado por la persona con más estudios en la familia",
        "default": "ninguna"
      },
      "housingSituation": {
        "type": "string",
        "title": "Situación de la vivienda",
        "default": "normal"
      },
      "otherUsefulInfo": {
        "type": "string",
        "title": "Otra información relevante",
        "default": "ninguna"
      },
      "income": {
        "type": "string",
        "title": "Esto representa su ingreso?",
        "default": "red"
      },
      "documentation": {
        "type": "string",
        "title": "Ingrese su documentación"
      },
      "drinkingWaterAccess": {
        "type": "string",
        "title": "Cuenta con acceso a agua potable?",
        "default": "red"
      }

    }
}
